# Usage:
#  ansible-playbook -i ../hosts ./main.yml -v
#

- hosts: mng
  remote_user: root
#  sudo: yes

  vars:
    common: ../common

    container_name: base-v1-0
    repo_dir: /work/image
    lxc_dir: /var/lib/lxc
    container_dir: '{{ lxc_dir }}/{{ container_name }}'

  tasks:

  - include: "{{ common }}/task.yml"

  - lxc_container: 
      name: '{{ container_name }}'
      container_log: true
      template: debian
      template_options: --arch amd64 --release jessie
      state: started
      container_command: |
       echo "root:password" | chpasswd
	echo 'Acquire::http { Proxy "http://apt.h.ccmp.jp:3142"; };' | tee /etc/apt/apt.conf
        apt-get update
    notify:
    - archive-base

  - file: path={{ repo_dir }} state=directory 


  handlers:

  - name: archive-base
    shell: tar c config rootfs fstab | gzip > {{ repo_dir }}/{{ container_name }}.tar.gz
    args:
      chdir: '{{ container_dir }}'


